# Reddit API Credentials
# Get these from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=sentiment-analyzer/1.0
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# Ingestion Configuration
SUBREDDIT=wallstreetbets
BATCH_SIZE=10
POLL_INTERVAL=60

# Sentiment Analysis Configuration
SENTIMENT_HISTORY_SIZE=100
BULLISH_THRESHOLD=0.6
BEARISH_THRESHOLD=0.6
MAX_TEXT_LENGTH=512
SENTIMENT_BUFFER_SIZE=1000

# Service URLs (for docker-compose, these are auto-configured)
SENTIMENT_API_URL=http://sentiment-api:8000
